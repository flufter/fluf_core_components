      - *tools_verify_flutterfire
      - *tools_install_shorebird
      - *config_copy_files
      - *signing_init_keychain
      - *signing_add_certificates
      - *signing_setup_xcode
      - *deps_get_flutter
      - *deps_install_pods
      - *font_build_awesome
      - *ios_patch
  {{/has_prod_env}}
  {{#has_testing_env}}
  ios-test:
    name: Test iOS (build)
    <<: *server_instance
    integrations:
      app_store_connect: {{app_store_connect_key_codemagic_name}}
    environment:
      <<: *env_versions
      ios_signing:
        certificates:
